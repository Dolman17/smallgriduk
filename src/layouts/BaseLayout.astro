---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "SmallGrid · Low-Power Homelabs That Just Work",
  description = "Practical, low-power homelab guides for Jellyfin, Proxmox, backups, and remote access that actually work at home.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <div class="site-root">
      <header class="site-header">
        <div class="site-header-inner">
          <a href="/" class="site-logo">
            <span class="site-logo-main">SmallGrid</span>
            <span class="site-logo-sub">Low-Power Homelabs</span>
          </a>

          <nav class="site-nav">
            <a href="/guides" class="site-nav-link">Guides</a>
            {/* Add more top-level links here later if needed */}
          </nav>
        </div>
      </header>

      <main class="page-shell">
        <div class="page-inner">
          <article class="article-card">
            <slot />
          </article>
        </div>
      </main>

      <footer class="site-footer">
        <div class="site-footer-inner">
          <p class="site-footer-text">
            © {new Date().getFullYear()} SmallGrid · Low-power homelabs that actually fit in a house.
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
