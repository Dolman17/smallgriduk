---
import "../styles/global.css";

const {
  title = "SmallGrid.uk",
  description = "Small, practical tools for real-world problems.",
  ogImage = "brand/smallgrid-logo.svg",
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);

// Base-path safe URLs (works on / and on subpaths like /smallgrid/)
const base = import.meta.env.BASE_URL;
const iconSvg = `${base}brand/smallgrid-icon.svg`;
const iconMonoSvg = `${base}brand/smallgrid-icon-mono.svg`;
const wordmarkSvg = `${base}brand/smallgrid-wordmark.svg`;
const ogImageUrl = ogImage.startsWith("http") ? ogImage : `${base}${ogImage.replace(/^\//, "")}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl.toString()} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Sora:wght@400;600;700&family=Source+Sans+3:wght@400;500;600;700&display=swap"
    />

    <!-- Favicons (SVG-first) -->
    <link rel="icon" type="image/svg+xml" href={iconSvg} />
    <link rel="mask-icon" href={iconMonoSvg} color="#064e3b" />

    <!-- Social -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl.toString()} />
    <meta property="og:image" content={ogImageUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
  </head>

  <body>
    <div class="site-root">
      <header class="site-header">
        <div class="site-header-inner">
          <a class="site-logo" href={base} aria-label="SmallGrid.uk home">
            <span class="site-logo-main" style="display:flex; align-items:center; gap:10px;">
              <img
                src={iconSvg}
                width="22"
                height="22"
                alt="SmallGrid icon"
                decoding="async"
                loading="eager"
              />
              <img
                src={wordmarkSvg}
                alt="SmallGrid.uk"
                decoding="async"
                loading="eager"
                style="height: 20px; width: auto;"
              />
            </span>
            <span class="site-logo-sub">Tiny tools. Solid systems.</span>
          </a>

          <nav class="site-nav" aria-label="Primary">
            <a class="site-nav-link" href={`${base}tutorials/`}>Tutorials</a>
            <a class="site-nav-link" href={`${base}guides/`}>Guides</a>
            <a class="site-nav-link" href={`${base}about/`}>About</a>
          </nav>
        </div>
      </header>

      <main class="page-shell">
        <div class="page-inner">
          <article class="article-card">
            <slot />
          </article>
        </div>
      </main>

      <footer class="site-footer">
        <div class="site-footer-inner">
          <p class="site-footer-text">
            <img
              src={iconMonoSvg}
              width="16"
              height="16"
              alt=""
              aria-hidden="true"
              decoding="async"
              loading="lazy"
              style="vertical-align: -3px; margin-right: 6px;"
            />
            Â© {new Date().getFullYear()} SmallGrid.uk
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
